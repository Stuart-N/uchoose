<div class="container-prospective">
  <div class="row">
    <div class="col-xs-12">

    <h2 id="prospective-title">Log in as a Prospective</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs" id="prospective-form">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

        <div class="form-actions">
          <%= f.button :submit, "Log in" %>
        </div>
        <%= render "prospectives/shared/links" %>
      </div>

    <% end %>

    </div>
  </div>
</div>
