<div class="head">
  <div class="navbar-fixed-top">
  <%= render 'shared/navbar_two' %>
  </div>
</div>

<div class = "search">
<%= form_tag mentors_path, method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Search mentors"
  %>
<% end %>
</div>

<h3><%= @result %></h3>

<%= link_to "See all mentors", mentors_path %>

<div class="container">

  <div class="col-xs-12">
      <% @mentors.each do |mentor| %>
        <div class="card">

          <div class="row">

            <div class="col-xs-3">
              <div class="card-left">
                <div class = "img">
                  <%= cl_image_tag "black-and-white-boy-casual-555790.jpg",height: 100, width: 100%>
                </div>
              </div>
            </div>

            <div class="col-xs-6">
              <div class="card-center">
                <h3 class="title"><%= mentor.first_name.upcase %> <%= mentor.last_name %></h3>
                <h3 class="uni-maj"> <%= mentor.university %> / <%= mentor.major %> <%= mentor.degree_level %> </h3>
                <p id = "description"> <%= mentor.description.first(80)%> ...</p>
                <p id="link"> <%= link_to "More info", mentor_path(mentor) %> </p>
              </div>
            </div>

            <div class="col-xs-3">
              <div class="card-right">
                <a href="http://www.bing.com" class="btn-treehouse">View profile</a>
              </div>
            </div>

          </div>

        </div>
      <% end %>
  </div>

</div>
