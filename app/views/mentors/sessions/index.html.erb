<%= form_tag mentors_path, method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Search mentors"
  %>
<% end %>

<h3><%= @result %></h3>

<%= link_to "See all mentors", mentors_path %>

<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <!-- Give div below id="mentors" -->
      <div>
        <% @mentors.each do |mentor| %>
          <h4><%= mentor.first_name %> <%= mentor.last_name %></h4>
          <p><%= mentor.university %></p>
          <p><%= mentor.major_category %></p>
          <p><%= mentor.major %></p>
          <!-- etc. -->
          <%= link_to "More info", mentor_path(mentor) %>
          <br>
        <% end %>
      </div>
    </div>
  </div>
</div>
